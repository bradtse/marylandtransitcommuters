<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drawer ListView Item style -->
    <style name="ListViewItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/drawer_text</item>
    </style>

    <style name="FavoritesTextStyle" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/drawer_text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="RoutesFavorites" parent="@style/FavoritesTextStyle">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="FinalStopFavorites" parent="@style/FavoritesTextStyle">
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
