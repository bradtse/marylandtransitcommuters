<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="Theme.MyTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:windowBackground">@color/window_color</item>
    </style>
    
    <style name="MyTheme.ActionBarStyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_color</item>
        <item name="android:background">@color/actionbar_color</item>
    </style>

</resources>
