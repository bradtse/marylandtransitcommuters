<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <!-- The main application theme -->
    <style name="Theme.MyTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:windowBackground">@color/window_color</item>
    </style>
    
    <!-- ActionBar style -->
    <style name="MyTheme.ActionBarStyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_color</item>
        <item name="android:background">@color/actionbar_color</item>
    </style>
    
</resources>