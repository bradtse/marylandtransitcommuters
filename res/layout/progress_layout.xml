<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/progress_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="@string/progress_desc" 
        android:textSize="15sp" />

    <ImageView
            android:id="@+id/progress_bus"
            android:background="@drawable/bus_animation"
            android:contentDescription="@string/progress_image_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true"
            android:layout_below="@id/progress_desc" />

</RelativeLayout>
